<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/profile_txtname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_profile"
        android:hint="Your Name"
        android:padding="13dp"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent=".8"
        android:drawableLeft="@drawable/user_img"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_img" />

    <EditText
        android:id="@+id/profile_txtbirthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_profile"
        android:drawableLeft="@drawable/user_img"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Birthday"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtname"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/profile_txtmunber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_profile"
        android:drawableLeft="@drawable/user_img"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Phone Number"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtbirthday"
        app:layout_constraintWidth_percent=".8" />

    <EditText
        android:id="@+id/profile_txtaddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_profile"
        android:drawableLeft="@drawable/user_img"
        android:drawablePadding="10dp"
        android:elevation="3dp"
        android:hint="Address"
        android:padding="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtmunber"
        app:layout_constraintWidth_percent=".8" />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/blue_fill__rounded_color"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="Cập nhật"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/profile_txtaddress" />

</androidx.constraintlayout.widget.ConstraintLayout>