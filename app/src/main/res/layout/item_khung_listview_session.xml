<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/style"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imge"
                android:layout_width="30dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_mamh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imge"
                android:layout_marginTop="10dp"
                android:text="Môn học: "
                android:fontFamily="@font/bungee"
                android:textSize="13dp"
                android:layout_marginBottom="-10dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_lop"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imge"
                android:layout_below="@+id/tv_mamh"
                android:layout_marginTop="5dp"
                android:text="Lớp: "
                android:fontFamily="@font/bungee"
                android:textSize="13dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_nhommh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imge"
                android:layout_below="@+id/tv_lop"
                android:layout_marginTop="-10dp"
                android:text="Nhóm học phần: "
                android:fontFamily="@font/bungee"
                android:textSize="13dp"
                android:textColor="@color/black"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>